{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}Article{% endblock %}

{% block body %}

        <div class="page-inner t-bordered">
            <div class="container">
                <div class="row">

                    <div class="col-md-8 left-side-sidebar">

                        <div class="post-content-wrap">
                            <figure class="item-shadow">
                                <a href="#" class="link-to-post">
                                    <img itemprop="image" src="{{ asset('article/image/' ~ article.image ) }}" alt="">
                                    <div class="post-overlay"></div>
                                </a>
                            </figure>

                            <div class="post-author-wrap mnt-50">
                                <div class="author-avatar">
                                    <img alt="" src="{{ 'https://api.adorable.io/avatars/285/' ~ article.user.email }}" class="avatar photo">
                                </div>
                            </div>

                            <div class="post-meta text-center">
                                <ul>
                                    <li><i class="ion-android-time"></i> {{ article.createdAt|date('D M Y') }}</li>
                                    <li class="post-meta-seperator"></li>
                                    <li><a href="#"><i class="ion-android-chat"></i><span>1</span> comment</a></li>
                                    <li class="post-meta-seperator"></li>
                                    <li>
                                        <div class="love-it-wrapper">
                                            <a href="#" class="love-it"> <i class="ion-heart"></i> <span class="love-count">581 likes</span></a>
                                        </div>
                                    </li>
                                    <li class="post-meta-seperator"></li>
                                    <li>
                                        <i class="fa fa-tag"></i> <a href="#"> Web Design</a>, <a href="#"> HTML</a>
                                    </li>
                                    <li class="float-right">
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <i class="fa fa-edit"></i> <a href="{{ path('admin_article_edit', { id:article.id }) }}"> éditer</a>
                                        {% endif %}
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <h2 class="fs-30 pt-20 text-center">{{ article.title }}</h2>

                        {{ article.content }}

                        <div class="blog-single-meta">

                            <div class="post-meta-section clearfix mb-none">
                                <div class="tag-cloud clearfix">
                                    <ul class="tag-cloud-inner">
                                        <li><a href="#">Lifestyle</a></li>
                                        <li><a href="#">Mobile</a></li>
                                        <li><a href="#">News</a></li>
                                        <li><a href="#">video</a></li>
                                    </ul>
                                </div>
                            </div>

                            <div class="post-meta-section clearfix">
                                <div class="blog-single-sharing-box">
                                    <h4>Partager cet article </h4>

                                    <div class="blog-social-networks boxed-icons">
                                        <a href="#" class="social-icon si-light si-small si-facebook" title="Facebook">
                                            <i class="si-icon-facebook"></i>
                                            <i class="si-icon-facebook"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="post-meta-section clearfix">
                                <div class="post-author-avatar">
                                    <img alt="" src="{{ 'https://api.adorable.io/avatars/285/' ~ article.user.email }}" class="avatar avatar-100 photo" height="75" width="75">
                                </div>
                                <div class="post-author-info">
                                    <h2 class="name title">A propos de l'auteur</h2>
                                    <div class="post-author-description mb-20">
                                        <p>
                                            {{ article.user.description }}
                                        </p>
                                    </div>

                                    <div class="post-author-posts-link">
                                        <a href="#" class="btn btn-outline-success btn-sm">Tous ses articles</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 right-side-sidebar">

                        <aside class="sidebar">

                            <section class="clean-sidebar sidebar-widget text-center">
                                <div class="join-us-form mt-35">
                                    <form action="php/newsletter-subscribe.php" method="POST" novalidate="novalidate">
                                        <h4 class="fs-16"><b>Restez informé des nouveaux articles </b></h4>
                                        <label>Saisir votre adresse Email </label>
                                        <div class="input-group">
                                            <input class="form-control text-center" placeholder="Adresse email" name="newsletterEmail" type="text">
                                        </div>
                                        <div class="input-group mt-15">
                                            <input class="btn btn-primary btn-shadow content-center w-100" placeholder="S'inscrire" name="newsletterEmail"
                                                   value="Register" type="submit">
                                        </div>
                                        <small>Aucun spam ne sera envoyé.</small>
                                    </form>
                                </div>
                            </section>
                        </aside>
                    </div>
                </div>
            </div>
        </div>

        {% endblock %}

        {% block javascripts %}
        {{ parent() }}
{% endblock %}