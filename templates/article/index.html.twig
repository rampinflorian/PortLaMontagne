{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/blog.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/ss-gizmo.css') }}" rel="stylesheet" />

{% endblock %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="page">
    <div class="page-inner p-none">
        <section class="section-primary pt-40">
            <div class="container">
                <div class="sort-destination-loader sort-destination-loader-showing mt-4 pt-2">
                    <div class="row portfolio-list sort-destination" data-sort-id="portfolio">
                        {% for article in articles %}
                        <div class="col-lg-6 isotope-item websites">
                            <article class="v_blog-item v_blog-item-related v_blog-grid">
                                <div class="v_blog-item-inner">
                                    <div class="v_blog-item-media">
                                        <a href="{{ path('article_show', { 'slug': article.slug }) }}">
                                            <img src="{{ asset('article/image/' ~ article.image ) }}" />
                                        </a>
                                    </div>
                                    <div class="v_blog-item-content">
                                        <div class="v_blog-item-header">
                                            <ul class="v_blog-item-meta">
                                                <li class="v_blog-item-date">
                                                  {{ article.createdAt|date('d/m/Y') }} - <i>Commentaires ( {{ article.comments|length }} )</i>
                                                </li>
                                            </ul>
                                            <a href="{{ path('article_show', { 'slug': article.slug }) }}" rel="bookmark">
                                                <h2 class="v_blog-item-title" itemprop="name headline">{{ article.title }}</h2>
                                            </a>
                                        </div>
                                        <div itemprop="articleBody">
                                            <p>
                                                {{ article.content|striptags|slice(0,200) ~ ' [...]' }}
                                            </p>
                                            <hr />
                                            <p class="v_blog-item-author">
                                                <a href="#">
                                                    <img alt="" src="{{ (article.user.image != '') ? asset('user/image/') ~ article.user.image : 'https://api.adorable.io/avatars/285/' ~ article.user.email }}">
                                                    <span>{{ article.user.fullName }}</span>
                                                </a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('.masonary-post-wrap').isotope({
            itemSelector: '.masonary-post-item',
            percentPosition: true
        })
    </script>
{% endblock %}